<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    tools:context=".MainActivity">


    <!-- for showing the history calculation-->
    <TextView
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="right"
        android:textSize="30dp"
        android:layout_above="@+id/outputText"
        android:textColor="@color/white"
        android:paddingRight="10dp"/>
    <!-- for showing the operation output-->
    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="right"
        android:textSize="50dp"
        android:layout_above="@+id/ll1"
        android:textColor="@color/white"
        android:paddingRight="10dp"/>
   <LinearLayout
       android:id="@+id/ll1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="#000"
       android:layout_alignParentBottom="true">

       <!--button horozontal chahiye so horizontal -->
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:padding="5dp"
           android:gravity="center"
           android:layout_height="wrap_content">


           <!--
           <ImageView
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:id="@+id/btn_ac"
               android:layout_marginStart="25dp"
               android:background="@drawable/btn_ac"/>  -->
           <TextView
               android:id="@+id/btn_ac"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#FF009688"
               android:padding="14dp"
               android:textSize="27sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="AC" />

           <TextView
               android:id="@+id/btn_modulo"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#FF009688"
               android:padding="12dp"
               android:textSize="32sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="%" />
           <TextView
               android:id="@+id/btn_divide"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#FF009688"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="/" />
           <TextView
               android:id="@+id/btn_cutLast"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#FF009688"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/btn_cutlast"
               android:backgroundTint="@color/white"
               android:layout_marginRight="35dp"
               android:text="" />
       </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:padding="5dp"
           android:gravity="center"

           android:layout_height="wrap_content">


           <TextView
               android:id="@+id/btn_7"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="7" />
           <TextView
               android:id="@+id/btn_8"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="8" />
           <TextView
               android:id="@+id/btn_9"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="9" />

           <TextView
               android:id="@+id/btn_multiplication"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#FF009688"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:layout_marginLeft="25dp"
               android:text="x" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal"
           android:padding="5dp">


           <TextView
               android:id="@+id/btn_4"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="4" />
           <TextView
               android:id="@+id/btn_5"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="5" />
           <TextView
               android:id="@+id/btn_6"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="6" />
           <TextView
               android:id="@+id/btn_minus"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#FF009688"
               android:padding="7dp"
               android:textSize="40sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:layout_marginLeft="25dp"
               android:text="-" />
       </LinearLayout>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:padding="5dp"
           android:gravity="center"
           android:layout_height="wrap_content">


           <TextView
               android:id="@+id/btn_1"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="1" />
           <TextView
               android:id="@+id/btn_2"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="2" />
           <TextView
               android:id="@+id/btn_3"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="3" />
           <TextView
               android:id="@+id/btn_plus"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#FF009688"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:layout_marginLeft="25dp"
               android:text="+" />
       </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:padding="5dp"
           android:gravity="center"
           android:layout_marginBottom="4dp"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/btn_0"

               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:padding="12dp"
               android:textSize="34sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="0" />
           <TextView
               android:id="@+id/btn_dot"
               android:layout_marginStart="25dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:textStyle="bold"
               android:textColor="#fff"
               android:textSize="37sp"
               android:textAlignment="center"
               android:background="@drawable/round_corner_digit"
               android:text="." />
            <TextView
                android:id="@+id/btn_equal"
                android:layout_marginStart="25dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:padding="10dp"
                android:textSize="37sp"
                android:textAlignment="center"
                android:layout_marginLeft="25dp"
                android:background="@drawable/round_corner_green_button"
                android:text="=" />
       </LinearLayout>
    </LinearLayout>

</RelativeLayout>